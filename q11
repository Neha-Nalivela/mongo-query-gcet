db.employees.aggregate([
    { $project: { name: 1, email: 1, salary:1 } },
    {$sort:{salary:-1}},
    {$limit:3}
]);
db.employees.aggregate([
  { $project: { name: 1, email: 1,salary:1 } },
  { $addFields: { AnnualSalary: { $multiply: ["$salary", 12] } } },
]);
db.employees.aggregate([
  {
    $project: {
      name: 1,
      age: 1,
      check: {
        $cond: {
          if: { $gt: ["$age", 40] },
          then: "B and A", 
          else: "B and B",},
      },
    },
  },
]);